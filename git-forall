#!/bin/sh

# Copyright Â© 2016-2018 Jakub Wilk <jwilk@jwilk.net>
# SPDX-License-Identifier: MIT

usage()
{
    printf 'Usage: %s [-L] [-d N] [-F FILTERCMDLINE] GITCMD [ARGS...]\n' "$prog"
}

set -u
prog="${0##*/}"
findopts=
findexpr=
filter='cat'
while getopts 'hLd:F:' opt
do
    case "$opt" in
        h) usage; exit 0;;
        L) findopts='-L';;
        d) findexpr="-maxdepth $((1 + OPTARG))";;
        F) filter="$OPTARG";;
        *) exit 1;;
    esac
done
shift $((OPTIND - 1))
if [ $# -eq 0 ]
then
    usage >&2
    exit 1
fi
template=$(git -C / config --get forall.template) || template='==> %s <=='
# shellcheck disable=SC2086
find $findopts . $findexpr -xdev -type d \( -name '.git' \) -print -prune \
| sh -c "$filter" \
| while read -r dir
do
    dir="${dir%/.git}"
    dir="${dir#./}"
    # shellcheck disable=SC2059
    printf "$template"'\n' "$dir"
    git -C "$dir" "$@" < /dev/null
    printf '\n'
done

# vim:ts=4 sts=4 sw=4 et
