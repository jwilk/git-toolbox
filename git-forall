#!/bin/sh

# Copyright Â© 2016-2024 Jakub Wilk <jwilk@jwilk.net>
# SPDX-License-Identifier: MIT

usage()
{
    printf 'Usage: %s [-L] [-d N] [-F FILTERCMDLINE] [-b] GITCMD [ARGS...]\n' "$prog"
}

set -u
prog="${0##*/}"
findopts=
findexpr=
ignore_boring=
filter='cat'
while getopts 'hLd:F:b' opt
do
    case "$opt" in
        h) usage; exit 0;;
        L) findopts='-L';;
        d) findexpr="-maxdepth $((1 + OPTARG))";;
        F) filter="$OPTARG";;
        b) ignore_boring=y;;
        *) exit 1;;
    esac
done
shift $((OPTIND - 1))
if [ $# -eq 0 ]
then
    usage >&2
    exit 1
fi
template=$(git -C / config --get forall.template) || template='==> %s <=='
# shellcheck disable=SC2086
find $findopts . $findexpr -xdev -name '.git' -print -prune \
| sh -c "$filter" \
| while read -r dir
do
    dir="${dir%/.git}"
    dir="${dir#./}"
    if [ "$ignore_boring" ]
    then
        out=$(git -C "$dir" "$@" < /dev/null)
        if [ "$out" ]
        then
            # shellcheck disable=SC2059
            printf "$template"'\n%s\n\n' "$dir" "$out"
        fi
    else
        # shellcheck disable=SC2059
        printf "$template"'\n' "$dir"
        git -C "$dir" "$@" < /dev/null
        printf '\n'
    fi
done

# vim:ts=4 sts=4 sw=4 et
