changelog=$(git ls-files doc/changelog doc/NEWS | LC_ALL=C sort | tail -n1)
read project version release junk <<EOF
$(git cat-file blob "HEAD:$changelog" | head -n1)
EOF
version="${version%)}"
version="${version#(}"
release="${release%;}"
git tag "$version" -asm "$project $version"
