project=$1
[ -n "$project" ] || project=$(basename "$PWD")
retag()
{
    export GIT_COMMITTER_DATE="$(git log -1 --format=%ci "$1")"
    git tag -m "$project $1" -f -s -a "$1" "$1^{}";
}
for t in $(git tag)
do
    retag $t
done

# vim:ts=4 sts=4 sw=4 et
